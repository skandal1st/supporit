# Database
DATABASE_URL=postgresql://user:password@localhost:5432/supporit

# JWT
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=7d

# Server
PORT=3001
NODE_ENV=development

# CORS
CORS_ORIGIN=http://localhost:5173

# Zabbix Integration
ZABBIX_URL=http://zabbix.local/api_jsonrpc.php
ZABBIX_API_TOKEN=your-zabbix-api-token

# Email Integration - IMAP (для получения писем)
IMAP_HOST=mail.teplocentral.org
IMAP_PORT=993
IMAP_USER=support@teplocentral.org
IMAP_PASSWORD=your-imap-password-here
IMAP_TLS=true

# Email Integration - SMTP (для отправки уведомлений)
SMTP_HOST=mail.teplocentral.org
SMTP_PORT=587
SMTP_USER=support@teplocentral.org
SMTP_PASSWORD=your-smtp-password-here
SMTP_SECURE=false
FROM_EMAIL=support@teplocentral.org
FROM_NAME=SupporIT Support

# Email Features
EMAIL_RECEIVER_ENABLED=true
SMTP_ENABLED=true
EMAIL_CHECK_CRON=*/5 * * * *

# Uploads
UPLOAD_DIR=uploads/tickets



